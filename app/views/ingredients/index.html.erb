<h1>Listing ingredients</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Lactose</th>
      <th>Nut</th>
      <th>Shellfish</th>
      <th>Wheat</th>
      <th>Vegetarian</th>
      <th>Vegan</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @ingredients.each do |ingredient| %>
      <tr>
        <td><%= ingredient.name %></td>
        <td><%= ingredient.lactose %></td>
        <td><%= ingredient.nut %></td>
        <td><%= ingredient.shellfish %></td>
        <td><%= ingredient.wheat %></td>
        <td><%= ingredient.vegetarian %></td>
        <td><%= ingredient.vegan %></td>
        <td><%= link_to 'Show', ingredient %></td>
        <td><%= link_to 'Edit', edit_ingredient_path(ingredient) %></td>
        <td><%= link_to 'Destroy', ingredient, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

