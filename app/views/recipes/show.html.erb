<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @recipe.name %>
</p>

<p>
  <strong>Servings:</strong>
  <%= @recipe.servings %>
</p>

<p>
  <strong>Ingredients:</strong><br>
    <% @recipe.measurements.each do |m| %>
      <%= m.ingredient_size %>
      <%= m.ingredient_unit %>
      <%= m.ingredient.name %>
      <br>
    <% end %>
</p>

<p>
  <strong>Directions:</strong>
  <%= @recipe.directions %>
</p>

<%= link_to 'Edit', edit_recipe_path(@recipe) %> |
<%= link_to 'Back', recipes_path %>
